# Use an official Python runtime as a base image
FROM python:3.9-slim

# Set a working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application code
COPY . .

# Copy the Qwen model files into the container
# Assuming your local model is in a folder called models/qwen
COPY models/qwen /root/.ollama/manifests/registry.ollama.ai/library/qwen

# Expose the port your API runs on
EXPOSE 8000

# Command to run the API server using uvicorn
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]
